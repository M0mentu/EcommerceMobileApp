<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cart"
        android:layout_width="384dp"
        android:layout_height="516dp"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/recycler_cart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:elevation="0dp">

        <Button
            android:id="@+id/car_checkLOC_BTN"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:layout_toStartOf="@+id/car_checkout_BTN"
            android:layout_toLeftOf="@+id/car_checkout_BTN"
            android:background="@drawable/ic_gps" />

        <Button
            android:id="@+id/car_checkout_BTN"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="2dp"
            android:text="Check out" />
    </RelativeLayout>





</RelativeLayout>