<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="25dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layoutCart_Product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product name"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/layoutCart_Product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/layoutCart_Product_name"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/layoutCart_Product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCart_Product_quantity"
            android:background="@color/gray"
            android:text="product name"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/layoutCart_Product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCart_Product_price"
            android:background="@color/gray"
            android:text="Quantity"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/layoutCart_Product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCart_Product_image"
            android:background="@color/gray"
            android:text="Price"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCart_Product_description"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/remove_item_cart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Remove item"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cartcounterplus"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"


                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="127dp"
                android:layout_marginLeft="127dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_plus" />

            <TextView
                android:id="@+id/cartcounter"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true"
                android:layout_marginStart="202dp"
                android:layout_marginLeft="202dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="1"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/cartcounterminus"
                android:layout_width="100dp"
                android:layout_height="50dp"


                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_minus" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>