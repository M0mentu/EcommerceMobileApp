<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layout_Product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product name"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/layout_Product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/layout_Product_name"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/layout_Product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product name"
            android:layout_below="@+id/layout_Product_quantity"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp"
             />
        <TextView
            android:id="@+id/layout_Product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_below="@+id/layout_Product_price"
            android:background="@color/gray"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/layout_Product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_below="@+id/layout_Product_image"
            android:background="@color/gray"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16dp"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>